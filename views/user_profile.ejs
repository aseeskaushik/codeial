
   <link rel="stylesheet" href="/css/user_profile.css">
    <h1>Codeial/User profile</h1>

    <%if(user.id== profile_user.id){%>
      <!-- if user matches then show the form -->
         <form action="/users/update/<%= profile_user.id %>" enctype="multipart/form-data" method="post">
            <input type="text" name="name" value="<%= profile_user.name %>" placeholder="Your Name" required>
            <input type="email" name="email" value="<%= profile_user.email %>" placeholder="Your Email address" required>
            <input type="file" name="avatar" placeholder="Profile Picture"> 
            <input type="submit" value="Upadate">
         </form>    
      <%}else{%>
         <!-- Show only profile info -->
         <p><%= profile_user.name %></p>
         <p><%= profile_user.email %></p>
      <%}%>
    

    